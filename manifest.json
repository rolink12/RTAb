{
  "manifest_version": 3,
  "name": "Modern Homepage",
  "version": "1.0.0",
  "description": "A customizable, fast, and modern homepage extension with tabbed interface",
  "permissions": [
    "storage"
  ],
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}